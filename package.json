{
  "name": "@syket/social-image-grid",
  "version": "1.0.0",
  "description": "A responsive social media-style image grid component with modal gallery for React",
  "keywords": [],
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "style": "./dist/index.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build --emptyOutDir false",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "npx husky install",
    "test": "VITEST_MIN_THREADS=6 VITEST_MAX_THREADS=6 vitest run --passWithNoTests",
    "coverage": "vitest run --coverage",
    "format": "npx prettier . --write",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --output-dir dist/storybook"
  },
  "author": "Syket Das",
  "license": "MIT",
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@eslint/js": "^9.13.0",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/addon-onboarding": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.7.9",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "^3.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.11.0",
    "happy-dom": "^16.8.1",
    "postcss": "^8.4.47",
    "prettier-plugin-css-order": "^2.1.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.3.6",
    "tailwindcss": "^3.4.14"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
